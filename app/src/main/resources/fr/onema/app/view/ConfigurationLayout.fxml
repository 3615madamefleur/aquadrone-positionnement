<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.76-ea"
            fx:controller="fr.onema.app.view.ConfigurationController">
    <children>
        <VBox>
            <children>
                <VBox>
                    <children>
                        <Label text="Décalage vertical">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </Label>
                        <Separator prefWidth="200.0"/>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Nord">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <Slider fx:id="verticalSlider" blockIncrement="1.0" majorTickUnit="10.0" max="50.0"
                                        min="-50.0" minorTickCount="1" onMouseClicked="#updateSpinnerFromSliderV"
                                        onMouseDragged="#updateSpinnerFromSliderV" prefWidth="280.0"
                                        showTickLabels="true" showTickMarks="true" snapToTicks="true">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="20.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Slider>
                                <Label text="Sud">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="12.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <Spinner fx:id="verticalSpinner" onMouseClicked="#updateSliderFromSpinnerV"
                                         prefWidth="90.0">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Spinner>
                                <Label text="cm/s">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                        <Separator prefWidth="200.0"/>
                        <Label text="Décalage horizontal">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </Label>
                        <Separator prefWidth="200.0"/>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Ouest">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <Slider fx:id="horizontalSlider" blockIncrement="1.0" majorTickUnit="10.0" max="50.0"
                                        min="-50.0" minorTickCount="1" onMouseClicked="#updateSpinnerFromSliderH"
                                        onMouseDragged="#updateSpinnerFromSliderH" prefWidth="280.0"
                                        showTickLabels="true" showTickMarks="true" snapToTicks="true">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="15.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Slider>
                                <Label text="Est">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="16.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <Spinner fx:id="horizontalSpinner" onMouseClicked="#updateSliderFromSpinnerH"
                                         prefWidth="90.0">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Spinner>
                                <Label text="cm/s">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                        <Separator prefWidth="200.0"/>
                        <Label text="Décalage de la profondeur">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                            </VBox.margin>
                        </Label>
                        <Separator prefWidth="200.0"/>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Surface">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <Slider fx:id="depthSlider" blockIncrement="1.0" majorTickUnit="10.0" max="50.0"
                                        min="-50.0" minorTickCount="1" onMouseClicked="#updateSpinnerFromSliderD"
                                        onMouseDragged="#updateSpinnerFromSliderD" prefWidth="280.0"
                                        showTickLabels="true" showTickMarks="true" snapToTicks="true">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Slider>
                                <Label text="Fond">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <Spinner fx:id="depthSpinner" onMouseClicked="#updateSliderFromSpinnerD"
                                         prefWidth="90.0">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Spinner>
                                <Label text="cm/s">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </VBox>
                <Separator prefWidth="200.0"/>
                <HBox alignment="CENTER" maxHeight="35.0" minHeight="35.0" prefHeight="35.0">
                    <children>
                        <Button fx:id="resetButton" maxWidth="140.0" mnemonicParsing="false"
                                onAction="#resetConfigurationLayout" prefWidth="140.0" text="Réinitialiser"/>
                        <Button fx:id="applyButton" mnemonicParsing="false" onAction="#applyConfigurationOnNextDive"
                                text="Appliquer à la plongée suivante">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
